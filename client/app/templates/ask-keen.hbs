<div class="col-sm-12 ask-keen-content">
  {{#if isQuestionSubmitted}}
      <h2>You asked:</h2>

      <div class="panel panel-default">
          <div class="panel-body">
            {{questionAsked}}
          </div>
      </div>
      <small><i>Please be patient while our advisors {{#each advisor in advisorsTyping}}
          <b>{{advisor}}</b>,
      {{/each}} are replying... </i></small>
  {{else}}
      <h2>Ask just about anything!</h2>

      <div class="input-group input-group-lg">
        {{input-with-on-change class="form-control" type="text" maxlength="140" value=questionAsked
        placeholder="Type in your question..." onInputChange="onInputChange"}}
          <span class="input-group-btn">
              <button class="btn btn-success" type="submit" {{action 'submitQuestion'}}>Ask a <i>bunch</i> of Advisors
              </button>
            </span>
      </div>
      <!-- to be removed later since we will show after submitting the question-->
      <small><i>Please be patient while our advisors {{#each advisor in advisorsTyping}}
          <b>{{advisor}}</b>,
      {{/each}} are replying... </i></small>

  {{/if}}
    <br/>
    <br/>
    <br/>

  {{#if anyAnswerPresent}}
      <h3>Responses from our advisors:</h3>
      <br/>
      <ul class="media-list advisor-message-list">
        {{#each answer in answersFromAdvisors}}
          {{user-message message=answer userId=userId}}
            <br/>
        {{/each}}
      </ul>
  {{/if}}
</div>


