<div class="col-sm-12">
    <h2>Get your answers now!</h2>
  {{#if isQuestionSubmitted}}
      <div class="panel panel-default">
          <div class="panel-body">
            {{questionAsked}}
          </div>
      </div>
  {{else}}
      <div class="input-group">
          <input type="text" class="form-control" placeholder="Type in your question..." {{bind-attr value=questionAsked}}>
            <span class="input-group-btn">
              <button class="btn btn-success" type="submit" {{action 'submitQuestion'}}>Ask a <i>bunch</i> of Advisors
              </button>
            </span>
      </div>
  {{/if}}
    <br/>
    <br/>
    <br/>

    <h3>Responses from our advisors...</h3>
    <br/>
    <ul class="media-list advisor-message-list">
      {{#each message in messageFromAdvisors}}
        {{user-message action="startChat" profileImageUrl=message.profileImageUrl advisorId=message.advisorId advisorName=message.advisorName postedDate=message.postedDate messageText=message.messageText starRating=message.starRating}}
          <br/>
      {{/each}}
    </ul>
</div>


